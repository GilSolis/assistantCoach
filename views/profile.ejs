<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="container">
            <h2>Create Post</h2>
            <form class="row gy-2 gx-3 align-items-center" id="post" action="/post/createPost" enctype="multipart/form-data" method='POST'>
              <div class="col-auto">
                <img id="uploadPreview"/>
              <div class='file file--upload'>
                <label for='imageUpload' class="btn btn-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                    <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
                  </svg>
                  Select an Image
                </label>
                <input type="file" class="form-control" id="imageUpload" name="file" accept="image/*" onchange="loadFile(event)" />
              </div>
            </div>
              <div class="col-9">
                <input class="form-control" type="text" placeholder="Enter Post Title" name='post'>
      
                <textarea class="form-control" placeholder="Enter your Post description (300 characters max.)" id="floatingTextarea" maxlength="300" name='postBody'></textarea>
      
                <input type="submit" class="btn btn-primary float-end" value="Add Post">
              </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>